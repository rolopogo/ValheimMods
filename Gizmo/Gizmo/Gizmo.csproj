      <Patch>$(AssemblyVersion.Split('.')[2])</Patch>
      <PackageName>$(AssemblyName)_v$(Major).$(Minor).$(Patch)</PackageName>
      <PackageDir>$(OutDir)$(PackageName)</PackageDir>
    </PropertyGroup>
  </Target>
  <Target Name="MakeThunderstorePackage" AfterTargets="GetAssemblyVersion">
